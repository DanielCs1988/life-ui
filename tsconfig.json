{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@constants/*": ["constants/*"],
      "@shared/*": ["shared/*"],
      "@quests/*": ["quests/*"],
      "@users/*": ["users/*"]
    }
  },
  "exclude": ["node_modules"]
}
